{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "indent": [
            "error",
            2,
            { "ignoredNodes": ["PropertyDefinition"] }
        ],
        "@typescript-eslint/no-explicit-any": ["off"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "max-len": ["error", { "code": 120 }],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
